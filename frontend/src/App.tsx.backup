import { useState, useRef, useEffect } from 'react';
import { SolsticeSDK } from '@solsticeprotocol/sdk';
import { PublicKey } from '@solana/web3.js';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Shield, Upload, Camera, Check, X, Sparkles, Lock, Zap, TestTube } from 'lucide-react';
import { Html5Qrcode } from 'html5-qrcode';
import { generateTestQR, TEST_USERS } from '@/utils/testQR';

// Demo content that requires age verification
const RESTRICTED_CONTENT = {
  game: {
    title: "üéÆ Midnight Racing",
    description: "High-stakes street racing game with realistic physics",
    rating: "18+",
    image: "https://images.unsplash.com/photo-1511882150382-421056c89033?w=800&h=400&fit=crop"
  },
  bonus: {
    title: "üéÅ Premium Rewards",
    description: "Exclusive NFT drops and token airdrops for verified users",
    perks: ["1000 SOL Tokens", "Rare NFT Collection", "VIP Discord Access"]
  }
};

function App() {
  const [sdk, setSdk] = useState<SolsticeSDK | null>(null);
  const [isVerified, setIsVerified] = useState(false);
  const [isVerifying, setIsVerifying] = useState(false);
  const [error, setError] = useState<string | null>(null);
  const [qrData, setQrData] = useState<string | null>(null);
  const [scannerActive, setScannerActive] = useState(false);
  const [verificationDetails, setVerificationDetails] = useState<any>(null);
  
  const fileInputRef = useRef<HTMLInputElement>(null);
  const html5QrCodeRef = useRef<Html5Qrcode | null>(null);

  // Initialize SDK
  useEffect(() => {
    const initSDK = async () => {
      try {
        const solsticeSDK = new SolsticeSDK({
          endpoint: 'https://api.devnet.solana.com',
          programId: new PublicKey('8jrTVUyvHrL5WTWyDoa6PTJRhh3MwbvLZXeGT81YjJjz'),
          network: 'devnet',
          debug: true
        });
        
        await solsticeSDK.initialize();
        setSdk(solsticeSDK);
        console.log('‚úÖ Solstice SDK initialized');
      } catch (err: any) {
        setError(`Failed to initialize SDK: ${err.message}`);
        console.error('SDK initialization error:', err);
      }
    };
    
    initSDK();
  }, []);

  // Handle QR code file upload
  const handleFileUpload = async (event: React.ChangeEvent<HTMLInputElement>) => {
    const file = event.target.files?.[0];
    if (!file) return;

    try {
      setIsVerifying(true);
      setError(null);

      // Read file as data URL
      const reader = new FileReader();
      reader.onload = async (e) => {
        const imageDataUrl = e.target?.result as string;
        
        // Use Html5Qrcode to scan the uploaded image
        const html5QrCode = new Html5Qrcode("reader");
        try {
          const decodedText = await html5QrCode.scanFile(file, false);
          setQrData(decodedText);
          await verifyIdentity(decodedText);
        } catch (err: any) {
          setError('Could not read QR code from image. Please try again.');
          console.error('QR decode error:', err);
        }
      };
      reader.readAsDataURL(file);
    } catch (err: any) {
      setError(`Upload failed: ${err.message}`);
    } finally {
      setIsVerifying(false);
    }
  };

  // Start camera scanner
  const startCameraScanner = async () => {
    try {
      setScannerActive(true);
      setError(null);
      
      const html5QrCode = new Html5Qrcode("reader");
      html5QrCodeRef.current = html5QrCode;
      
      const config = { fps: 10, qrbox: { width: 250, height: 250 } };
      
      await html5QrCode.start(
        { facingMode: "environment" },
        config,
        async (decodedText) => {
          // Stop scanner once QR is detected
          await stopCameraScanner();
          setQrData(decodedText);
          await verifyIdentity(decodedText);
        },
        (errorMessage) => {
          // Ignore scan errors (happens continuously while searching)
        }
      );
    } catch (err: any) {
      setError(`Camera access failed: ${err.message}`);
      setScannerActive(false);
    }
  };

  const stopCameraScanner = async () => {
    if (html5QrCodeRef.current) {
      try {
        await html5QrCodeRef.current.stop();
        html5QrCodeRef.current = null;
      } catch (err) {
        console.error('Error stopping scanner:', err);
      }
    }
    setScannerActive(false);
  };

  // Verify identity with Solstice SDK
  const verifyIdentity = async (qrCodeData: string) => {
    if (!sdk) {
      setError('SDK not initialized');
      return;
    }

    try {
      setIsVerifying(true);
      setError(null);

      console.log('QR Code Data received:', qrCodeData.substring(0, 100) + '...');

      // Generate age proof (18+) with QR code data
      console.log('Generating age proof...');
      const ageProof = await sdk.generateAgeProofWithQR(qrCodeData, {
        threshold: 18,
        nonce: Date.now().toString()
      });

      console.log('Proof generated:', ageProof);

      // Verify the proof
      console.log('Verifying proof on-chain...');
      const result = await sdk.verifyIdentity(ageProof);

      if (result.verified) {
        setIsVerified(true);
        setVerificationDetails({
          timestamp: new Date().toISOString(),
          proofType: 'Age Verification (18+)',
          status: 'Verified',
          commitment: Array.isArray(ageProof.publicSignals) ? ageProof.publicSignals[0] : 'N/A'
        });
        console.log('‚úÖ Identity verified successfully!');
      } else {
        throw new Error('Verification failed: User does not meet age requirement');
      }
    } catch (err: any) {
      // Provide more helpful error message
      const errorMsg = err.message || String(err);
      if (errorMsg.includes('Invalid mAadhaar QR code')) {
        setError(
          `QR Code Validation Error: The QR code format is not recognized. ` +
          `Please ensure you're scanning a valid mAadhaar QR code that contains uid, name, and dob fields. ` +
          `For testing, use the Demo Mode button instead.`
        );
      } else {
        setError(`Verification failed: ${errorMsg}`);
      }
      console.error('Verification error:', err);
    } finally {
      setIsVerifying(false);
    }
  };

  // Demo mode - skip verification for testing
  const useDemoMode = () => {
    setIsVerified(true);
    setVerificationDetails({
      timestamp: new Date().toISOString(),
      proofType: 'Demo Mode',
      status: 'Verified (Demo)',
      commitment: 'DEMO_' + Math.random().toString(36).substring(7)
    });
  };

  if (!sdk) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 flex items-center justify-center">
        <div className="text-white text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-white mx-auto mb-4"></div>
          <p>Initializing Solstice SDK...</p>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 text-white">
      {/* Background Effects */}
      <div className="fixed inset-0">
        <div className="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-purple-500/10 via-transparent to-transparent" />
        <div className="absolute bottom-0 right-0 w-full h-full bg-[radial-gradient(ellipse_at_bottom,_var(--tw-gradient-stops))] from-green-500/10 via-transparent to-transparent" />
      </div>

      {/* Header */}
      <header className="relative z-10 flex items-center justify-between p-6 border-b border-white/10">
        <div className="flex items-center gap-2">
          <Shield className="w-8 h-8 text-purple-400" />
          <span className="text-2xl font-bold bg-gradient-to-r from-purple-400 to-green-400 bg-clip-text text-transparent">
            Solstice Vault
          </span>
        </div>
        {isVerified && (
          <div className="flex items-center gap-2 px-4 py-2 bg-green-500/20 border border-green-500/30 rounded-full">
            <Check className="w-4 h-4 text-green-400" />
            <span className="text-sm text-green-400">Verified</span>
          </div>
        )}
      </header>

      {/* Main Content */}
      <main className="relative z-10 container mx-auto px-6 py-12">
        {!isVerified ? (
          // Verification Screen
          <div className="max-w-2xl mx-auto">
            <div className="text-center mb-8">
              <div className="inline-block p-4 bg-purple-500/20 rounded-full mb-4">
                <Lock className="w-12 h-12 text-purple-400" />
              </div>
              <h1 className="text-4xl font-bold mb-4">Age Verification Required</h1>
              <p className="text-gray-300 text-lg">
                This content is restricted to users 18 and older. Verify your identity using Aadhaar QR code.
              </p>
            </div>

            <Card className="mb-6">
              <CardHeader>
                <CardTitle className="flex items-center gap-2">
                  <Shield className="w-6 h-6 text-purple-400" />
                  Zero-Knowledge Verification
                </CardTitle>
                <CardDescription>
                  Your personal data never leaves your device. Only cryptographic proofs are shared.
                </CardDescription>
              </CardHeader>
              <CardContent className="space-y-4">
                {/* QR Code Scanner Container */}
                <div id="reader" className={scannerActive ? 'block' : 'hidden'}></div>

                {!scannerActive && (
                  <>
                    <Button
                      onClick={startCameraScanner}
                      disabled={isVerifying}
                      className="w-full"
                      size="lg"
                    >
                      <Camera className="w-5 h-5 mr-2" />
                      Scan QR Code
                    </Button>

                    <div className="relative">
                      <div className="absolute inset-0 flex items-center">
                        <span className="w-full border-t border-white/10" />
                      </div>
                      <div className="relative flex justify-center text-xs uppercase">
                        <span className="bg-slate-900/50 px-2 text-gray-400">Or</span>
                      </div>
                    </div>

                    <input
                      ref={fileInputRef}
                      type="file"
                      accept="image/*"
                      onChange={handleFileUpload}
                      className="hidden"
                    />
                    <Button
                      onClick={() => fileInputRef.current?.click()}
                      disabled={isVerifying}
                      variant="outline"
                      className="w-full"
                      size="lg"
                    >
                      <Upload className="w-5 h-5 mr-2" />
                      Upload QR Code Image
                    </Button>

                    <div className="relative">
                      <div className="absolute inset-0 flex items-center">
                        <span className="w-full border-t border-white/10" />
                      </div>
                      <div className="relative flex justify-center text-xs uppercase">
                        <span className="bg-slate-900/50 px-2 text-gray-400">Demo</span>
                      </div>
                    </div>

                    <div className="grid grid-cols-2 gap-3">
                      <Button
                        onClick={() => {
                          const testUser = TEST_USERS[0]; // Use first test user (adult)
                          const testQR = generateTestQR(testUser);
                          console.log('Generated Test QR:', testQR);
                          verifyIdentity(testQR);
                        }}
                        variant="outline"
                        className="w-full"
                        size="lg"
                      >
                        <TestTube className="w-5 h-5 mr-2" />
                        Test with Valid QR
                      </Button>

                      <Button
                        onClick={useDemoMode}
                        variant="ghost"
                        className="w-full"
                        size="lg"
                      >
                        <Sparkles className="w-5 h-5 mr-2" />
                        Skip Verification
                      </Button>
                    </div>
                  </>
                )}

                {scannerActive && (
                  <Button
                    onClick={stopCameraScanner}
                    variant="destructive"
                    className="w-full"
                  >
                    <X className="w-5 h-5 mr-2" />
                    Stop Scanner
                  </Button>
                )}

                {isVerifying && (
                  <div className="text-center py-8">
                    <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-purple-400 mx-auto mb-4"></div>
                    <p className="text-gray-300">Generating zero-knowledge proof...</p>
                    <p className="text-sm text-gray-500 mt-2">This may take a few seconds</p>
                  </div>
                )}

                {error && (
                  <div className="p-4 bg-red-500/10 border border-red-500/30 rounded-lg">
                    <p className="text-red-400 text-sm flex items-center gap-2">
                      <X className="w-4 h-4" />
                      {error}
                    </p>
                  </div>
                )}
              </CardContent>
            </Card>

            {/* Info Cards */}
            <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
              <Card className="p-4">
                <div className="flex flex-col items-center text-center">
                  <Zap className="w-8 h-8 text-purple-400 mb-2" />
                  <h3 className="font-semibold mb-1">Fast</h3>
                  <p className="text-xs text-gray-400">5-second proof generation</p>
                </div>
              </Card>
              <Card className="p-4">
                <div className="flex flex-col items-center text-center">
                  <Shield className="w-8 h-8 text-green-400 mb-2" />
                  <h3 className="font-semibold mb-1">Private</h3>
                  <p className="text-xs text-gray-400">Zero data exposure</p>
                </div>
              </Card>
              <Card className="p-4">
                <div className="flex flex-col items-center text-center">
                  <Check className="w-8 h-8 text-blue-400 mb-2" />
                  <h3 className="font-semibold mb-1">Secure</h3>
                  <p className="text-xs text-gray-400">Cryptographic proofs</p>
                </div>
              </Card>
            </div>
          </div>
        ) : (
          // Verified Content Screen
          <div className="max-w-4xl mx-auto space-y-6">
            {/* Success Message */}
            <Card className="bg-gradient-to-r from-green-500/10 to-purple-500/10 border-green-500/30">
              <CardHeader>
                <CardTitle className="flex items-center gap-2 text-green-400">
                  <Check className="w-6 h-6" />
                  Identity Verified!
                </CardTitle>
                <CardDescription className="text-gray-300">
                  Welcome to Solstice Vault. You now have access to age-restricted content.
                </CardDescription>
              </CardHeader>
              {verificationDetails && (
                <CardContent>
                  <div className="grid grid-cols-2 gap-4 text-sm">
                    <div>
                      <p className="text-gray-400">Proof Type</p>
                      <p className="font-mono text-purple-300">{verificationDetails.proofType}</p>
                    </div>
                    <div>
                      <p className="text-gray-400">Status</p>
                      <p className="font-mono text-green-300">{verificationDetails.status}</p>
                    </div>
                    <div className="col-span-2">
                      <p className="text-gray-400">Commitment Hash</p>
                      <p className="font-mono text-xs text-blue-300 break-all">{verificationDetails.commitment}</p>
                    </div>
                  </div>
                </CardContent>
              )}
            </Card>

            {/* Game Content */}
            <Card>
              <CardHeader>
                <div className="flex items-start justify-between">
                  <div>
                    <CardTitle className="text-2xl">{RESTRICTED_CONTENT.game.title}</CardTitle>
                    <CardDescription>{RESTRICTED_CONTENT.game.description}</CardDescription>
                  </div>
                  <span className="px-3 py-1 bg-red-500/20 border border-red-500/30 rounded-full text-red-400 text-sm">
                    {RESTRICTED_CONTENT.game.rating}
                  </span>
                </div>
              </CardHeader>
              <CardContent>
                <div className="rounded-lg overflow-hidden mb-4">
                  <img 
                    src={RESTRICTED_CONTENT.game.image} 
                    alt="Game cover"
                    className="w-full h-64 object-cover"
                  />
                </div>
                <Button className="w-full" size="lg">
                  <Sparkles className="w-5 h-5 mr-2" />
                  Launch Game
                </Button>
              </CardContent>
            </Card>

            {/* Bonus Rewards */}
            <Card>
              <CardHeader>
                <CardTitle className="flex items-center gap-2">
                  {RESTRICTED_CONTENT.bonus.title}
                </CardTitle>
                <CardDescription>{RESTRICTED_CONTENT.bonus.description}</CardDescription>
              </CardHeader>
              <CardContent>
                <ul className="space-y-3">
                  {RESTRICTED_CONTENT.bonus.perks.map((perk, idx) => (
                    <li key={idx} className="flex items-center gap-3 p-3 bg-white/5 rounded-lg">
                      <div className="w-8 h-8 bg-purple-500/20 rounded-full flex items-center justify-center">
                        <Check className="w-5 h-5 text-purple-400" />
                      </div>
                      <span className="font-medium">{perk}</span>
                    </li>
                  ))}
                </ul>
                <Button className="w-full mt-4" variant="outline">
                  Claim Rewards
                </Button>
              </CardContent>
            </Card>

            {/* Reset Button */}
            <Button 
              onClick={() => {
                setIsVerified(false);
                setVerificationDetails(null);
                setQrData(null);
              }}
              variant="ghost"
              className="w-full"
            >
              Logout & Reset Verification
            </Button>
          </div>
        )}
      </main>

      {/* Footer */}
      <footer className="relative z-10 text-center py-8 text-gray-500 text-sm border-t border-white/10 mt-12">
        <p>Powered by Solstice Protocol ‚Ä¢ Zero-Knowledge Identity Verification</p>
      </footer>
    </div>
  );
}

export default App;
